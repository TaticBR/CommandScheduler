{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
